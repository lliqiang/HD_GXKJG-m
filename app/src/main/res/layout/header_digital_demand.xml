<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_size"
    android:layout_marginTop="23dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivBack"
        style="@style/iv_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_input_ll"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/icon_size"
        android:layout_marginRight="@dimen/icon_size"
        android:background="@drawable/bg_input_ll_no_stroke"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/edit_text_m_h"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/query_hint"
            android:singleLine="true"
            android:textColor="@color/blackLight"
            android:textColorHint="@color/grey"
            android:textCursorDrawable="@drawable/text_cursor_drawable"
            android:textSize="16sp">
        </EditText>

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="@dimen/iv_clear_m_h"
            android:src="@mipmap/delete"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivScan"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:padding="@dimen/icon_padding"
        android:src="@mipmap/ic_scan_w"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>