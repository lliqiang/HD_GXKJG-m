<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_act_lang_usertype">

    <RelativeLayout
        android:id="@+id/rlChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlAdult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBallChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ivChild"
            android:src="@mipmap/ic_ball"/>

        <ImageView
            android:id="@+id/ivChild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/bg_user_type_child"/>

    </RelativeLayout>


    <ImageButton
        android:id="@+id/ibEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="32dp"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_arrow_enter"/>

    <RelativeLayout
        android:id="@+id/rlAdult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/ivBallAdult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ivAdult"
            android:src="@mipmap/ic_ball"/>

        <ImageView
            android:id="@+id/ivAdult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_user_type_adult"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
