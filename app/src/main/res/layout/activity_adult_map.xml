<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/common"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:layout_marginTop="@dimen/action_bar_m_t">
        <ImageView
            android:id="@+id/ivBack"
            style="@style/iv_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>
    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/flMapContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_input_ll_with_stroke"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_search_c" />

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:textColor="@color/blackLight"
                android:textColorHint="@color/grey"
                android:textCursorDrawable="@drawable/text_cursor_drawable" />

            <ImageView
                android:id="@+id/ivScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_scan_c" />

        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="90dp"
    android:layout_marginRight="20dp"
    android:layout_gravity="bottom|right">

    <ImageView
        android:id="@+id/Img_child4F"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:visibility="visible"
        android:src="@drawable/f4_yes"/>
    <ImageView
        android:id="@+id/Img_child3F"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:visibility="visible"
        android:src="@drawable/f3_yes"/>
        <ImageView
            android:id="@+id/Img_child2F"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:visibility="visible"
           android:src="@drawable/f2_yes"/>
</LinearLayout>
        <ImageView
            android:id="@+id/video_childmap"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/video_on"
            android:clickable="true"
            />
    </FrameLayout>


</LinearLayout>
