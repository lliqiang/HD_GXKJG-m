<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_act_a_list"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:layout_marginTop="@dimen/action_bar_m_t">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/iv_back" />

        <ImageView
            android:id="@+id/floor_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivMap"
            android:src="@mipmap/bg_a_2f" />

        <ImageView
            android:id="@+id/ivMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="19dp"
            android:src="@mipmap/ic_map" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:paddingStart="12dp"
        app:tabIndicatorColor="@color/aColorAccent"
        app:tabMode="scrollable"
        app:tabPaddingEnd="12dp"

        app:tabBackground="@drawable/tab_selector"
        app:tabSelectedTextColor="@color/aColorAccent"
        app:tabTextAppearance="@style/tab_text_appearance"
        app:tabTextColor="@color/white" />
    <!-- android:background="@color/tranBlackLight"-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
