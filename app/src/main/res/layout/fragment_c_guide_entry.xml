<?xml version="1.0" encoding="utf-8"?>
<com.hengda.smart.gxkjg.ui.wdg.SlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ibFloor2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/c_2f"
                android:foreground="?android:attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/ibFloor3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:background="@mipmap/c_3f" />

            <ImageButton
                android:id="@+id/ibFloor4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                android:background="@mipmap/c_4f" />

            <ImageButton
                android:id="@+id/ibFloor4l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:background="@mipmap/c_4fl" />

        </LinearLayout>

        <com.hengda.smart.gxkjg.ui.wdg.ParticleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:particleImg="@mipmap/dot1"
            app:particleSpeed="1"
            app:startX="-0.08"
            app:startY="0.00" />

        <com.hengda.smart.gxkjg.ui.wdg.ParticleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:particleImg="@mipmap/dot2"
            app:particleSpeed="1"
            app:startX="0.11"
            app:startY="0.14" />

        <com.hengda.smart.gxkjg.ui.wdg.ParticleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:particleImg="@mipmap/dot3"
            app:particleSpeed="1"
            app:startX="-0.01"
            app:startY="0.26" />

        <com.hengda.smart.gxkjg.ui.wdg.ParticleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:particleImg="@mipmap/dot4"
            app:particleSpeed="1"
            app:startX="0.12"
            app:startY="0.46" />

        <com.hengda.smart.gxkjg.ui.wdg.ParticleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:particleImg="@mipmap/dot5"
            app:particleSpeed="1"
            app:startX="0.88"
            app:startY="0.13" />

        <com.hengda.smart.gxkjg.ui.wdg.ParticleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:particleImg="@mipmap/dot6"
            app:particleSpeed="1"
            app:startX="0.79"
            app:startY="0.30" />

        <com.hengda.smart.gxkjg.ui.wdg.ParticleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:particleImg="@mipmap/dot7"
            app:particleSpeed="1"
            app:startX="0.87"
            app:startY="0.49" />

        <com.hengda.smart.gxkjg.ui.wdg.ParticleView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:particleImg="@mipmap/dot8"
            app:particleSpeed="1"
            app:startX="0.53"
            app:startY="0.50" />
    </FrameLayout>
</com.hengda.smart.gxkjg.ui.wdg.SlidingLayout>


